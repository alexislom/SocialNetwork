@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new Dictionary<string, object>
                        { { "data-toggle", "validator" }, { "class", "col-md-8 col-sm-pull-2 col-md-offset-3" } }))
{

    <h3>Please, sign in...</h3>
    <hr />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group login-group">
        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-user"></i>
            </span>
            @Html.TextBox("UserName", null, new { @class = "form-control", @placeholder = "Enter login" })
        </div>
        @Html.ValidationMessage("UserName")
    </div>
    <div class="form-group login-group">
        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-lock"></i>
            </span>
            @Html.TextBox("Password", null, new { @class = "form-control", @placeholder = "Enter password", @type = "password" })
        </div>
        @Html.ValidationMessage("Password")
    </div>
    @Html.CheckBox("Remember Me", false, new { @name = "RememberMe" })
    @Html.Label("Remember Me", "Remember me")
    <button class="btn btn-lg btn-success btn-block" type="submit">Login</button>
}