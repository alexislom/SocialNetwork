@model IEnumerable<PL.Models.Message.MessageModel>

@if(Model.Count() == 0)
{
    <b>No messages</b>
}
@foreach (var m in Model)
{
    
    <div class="row">

        <div class="col-xs-4 col-sm-4 col-md-3 col-lg-2">
            <img src="@Url.Action("GetImage", "Profile", new { Id = m.SenderId})" class="img-circle img-responsive" />
        </div>

        <div class="col-xs-8">
            <div class="row">
                <h3>
                    @m.Sender.FirstName

                </h3>
            </div>

            <div class="row">
                <small>
                    <i>Posted @m.SendTime.ToShortTimeString()</i>
                </small>
            </div>
            <div class="row">
                <h4> @m.Text</h4>
            </div>
        </div>


    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-6 col-md-offset-4 col-md-4 col-lg-3 col-lg-offset-4">
            <button class="btn btn-block btn-danger block_message" value="@m.Id">
                Block
            </button>
        </div>
    </div>
    
}

