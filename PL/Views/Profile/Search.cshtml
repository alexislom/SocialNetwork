@model PL.Models.Profile.SearchUserModel


@using (Html.BeginForm("Search", "Profile", FormMethod.Post, new Dictionary<string, object> { { "data-toggle", "validator" } }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal fade-in-anim">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h2>Advanced Search</h2>
        <hr/>
        <div class="form-group">
            <label class="control-label col-md-2" for="FirstName">First Name</label>
            <div class="col-md-6 col-lg-8">
                @Html.TextBoxFor(model => model.FirstName,  new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="LastName">Last Name</label>
            <div class="col-md-6 col-lg-8">
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="UserName">Username</label>
            <div class="col-md-6 col-lg-8">
                @Html.TextBoxFor(model => model.NickName, new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="City">City</label>
            <div class="col-md-6 col-lg-8">
                @Html.TextBoxFor(model => model.City,  new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 col-lg-8">
                @Html.RadioButtonFor(model => model.Gender, "true", new { id = "male_true" })
                @Html.Label("male_true", "Male")
                @Html.RadioButtonFor(model => model.Gender, "false", new { id = "male_false" })
                @Html.Label("male_false", "Female")
                @Html.ValidationMessageFor(model => model.Gender)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-6 col-md-offset-4 col-md-4 col-lg-3 col-lg-offset-7">
                <button class="btn btn-lg btn-success btn-block" type="submit" >
                    <i class="glyphicon glyphicon-search"> </i>Search
                </button>
            </div>      
        </div>
    </div>
}
