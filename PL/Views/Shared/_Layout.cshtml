<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title LOM'S Social Network</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/customJS.js")

</head>
<body>
    @Html.Partial("_Header")
    <div class="container">
        <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9 pull-right container jumbotron">
            <div id="loading" style="display:none;">
                <h2>Loading... Please wait</h2>
            </div>
            <div id="main_container">
                @RenderBody()
            </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 text-center">
            @Html.Partial("_LeftMenu")
        </div>
    </div>
    @Scripts.Render("~/bundles/unobtrusive-ajax")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
