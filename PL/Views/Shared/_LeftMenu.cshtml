
@if (User.Identity.IsAuthenticated)
{
    <div class="row left-menu">
        <ul class="nav text-left">
            <li>
                @Ajax.ActionLink("My page", "Index", "Profile", null, new AjaxOptions()
                {
                    UpdateTargetId = "main_container"
                })
            </li>
            <li>
                @Ajax.ActionLink("My friends", "Friends", "Friend", null, new AjaxOptions()
                {
                    UpdateTargetId = "main_container"
                })
            </li>
            <li>
                @Ajax.ActionLink("Friendship requests", "FriendRequests", "Friend", null, new AjaxOptions()
                {
                    UpdateTargetId = "main_container"
                })
            </li>
            <li>
                @Ajax.ActionLink("My Messages", "Dialogs", "Message", null, new AjaxOptions()
                {
                    UpdateTargetId = "main_container"
                })
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li>
                    @Ajax.ActionLink("Manage users", "GetAllUsers", "Account", null, new AjaxOptions()
                    {
                        UpdateTargetId = "main_container"
                    })
                </li>
                <li>
                    @Ajax.ActionLink("Filter messages", "GetUsers", "Account", null, new AjaxOptions()
                    {
                        UpdateTargetId = "main_container"
                    })
                </li>
            }
        </ul>
    </div>
}
<script>

    function hideContent() {
        $("#main_container").hide();
    };
    function unhideContent() {
        $("#main_container").show();
    };

</script>